{% extends "base.twig" %}

{% block body %}
    {% include "parts/top_section.twig" with { "title": wp_title, "intro": theme.theme_mod("intro_blog")  } %}


    <!-- Events Section -->
	<section class="events-page-section spad">
		<div class="container">
			<div class="row">
                {% for post in posts %}
                    <div class="col-lg-6">
                        {% include "parts/event-list.twig" with { imageSize: "event_thumbnail"} %}
                    </div>
                {% endfor %}
			</div>

            <!-- Pagination -->
            {% include "parts/pagination.twig" %}
		</div>
	</section>
	<!-- Events Section end -->
{% endblock body %}