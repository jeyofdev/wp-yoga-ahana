{% extends "base.twig" %}

{% block body %}
    {% include "parts/top_section.twig" with { "title": wp_title, "intro": theme.theme_mod("top_section_content_trainer")  } %}

    <!-- Trainers Section -->
    <section class="trainers-page-section spad overflow-hidden">
        <div class="container">
            {% if posts.count is not same as (0) %}
                <div class="row">
                    {% for post in posts %}
                        <div class="col-lg-6">
                            {% include "parts/trainers-list.twig" with { trainer: post } %}
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                {% include "parts/pagination.twig" %}
            {% else %}
				<p class="alert alert-danger">{{ __("No trainers available for the moment. Come back later", "ahana") }}</p>
			{% endif %}
        </div>
    </section>
    <!-- Trainers Section end -->
{% endblock body %}