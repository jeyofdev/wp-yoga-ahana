{% extends "base.twig" %}

{% block body %}
    {% include "parts/top_section.twig" with { "title": wp_title, "intro": theme.theme_mod("intro_blog")  } %}

    <!-- Classes Section -->
    <section class="classes-page-section spad overflow-hidden">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row">
                        {% for post in posts %}
                            <div class="col-md-6">
                                <div class="classes-item-warp">
                                    <div class="classes-item">
                                        <div class="ci-img">
                                            {% if post.thumbnail.src is not null %}
                                            <img src="{{ post.thumbnail.src | resize("classes_thumbnail") }}" alt="">
                                            {% endif %}
                                        </div>
                                        <div class="ci-text">
                                            <h4><a href="{{ post.link }}">{{ post.title }}</a></h4>
                                            <div class="ci-metas">
                                                <div class="ci-meta">
                                                    <i class="material-icons">event_available</i>
                                                    {{ get_classes_days(post.terms( {query: {taxonomy:"classes_day" }} )) }}
                                                </div>
                                                <div class="ci-meta">
                                                    <i class="material-icons">alarm_on</i>
                                                    {{ post.classes_start_time|date("H:ia") ~ " - " ~ post.classes_end_time|date("H:ia") }}
                                                </div>
                                            </div>
                                            <p>{{ post.preview.read_more(false) }}</p>
                                        </div>
                                        <div class="ci-bottom">
                                            <div class="ci-author">
                                                <img src="{{ Image(get_trainer(post).thumbnail).src | resize("classes_trainer_thumbnail") }}" alt="">
                                    
                                                <div class="author-text">
                                                    <a href="{{ get_trainer(post).link }}">
                                                        <h6>{{ get_trainer(post).trainer }}</h6>
                                                    </a>
                                                    <p>{{ get_trainer(post).job }}</p>
                                                </div>
                                            </div>
                                            <a href="" class="site-btn sb-gradient">{{ __("book now", "ahana") }}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Pagination -->
                    {% include "parts/pagination.twig" %}
                </div>
            </div>
        </div>
    </section>
    <!-- Classes Section end -->
{% endblock body %}