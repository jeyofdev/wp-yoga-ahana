{% extends "base.twig" %}

{% block body %}
    {% include "parts/top_section.twig" with { "title": wp_title, "intro": theme.theme_mod("intro_blog")  } %}

    <!-- Classes Section -->
    <section class="classes-page-section spad overflow-hidden">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row">
                        {% for post in posts %}
                            <div class="col-md-6">
                                <div class="classes-item-warp">
                                    {% include "parts/classes-list.twig" %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Pagination -->
                    {% include "parts/pagination.twig" %}
                </div>
            </div>
        </div>
    </section>
    <!-- Classes Section end -->
{% endblock body %}